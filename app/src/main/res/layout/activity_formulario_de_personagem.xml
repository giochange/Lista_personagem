<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.FormurioDePersonagemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <Button
        android:id="@+id/string_salvar"
        android:layout_width="342dp"
        android:layout_height="56dp"
        android:layout_marginStart="166dp"
        android:layout_marginLeft="166dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:text="SALVAR"
        android:visibility="gone"/>


        <EditText
            android:id="@+id/string_name"
            android:layout_width="392dp"
            android:layout_height="49dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="186dp"
            android:layout_marginRight="186dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name:" />

        <EditText
            android:id="@+id/string_nascimento"
            android:layout_width="395dp"
            android:layout_height="51dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="186dp"
            android:layout_marginRight="186dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Descript:" />

        <EditText
            android:id="@+id/string_altura"
            android:layout_width="396dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="186dp"
            android:layout_marginRight="186dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Date:" />

</LinearLayout>
</ScrollView>